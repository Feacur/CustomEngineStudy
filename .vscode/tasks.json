{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "isBuildCommand": true,
            "taskName": "build",
            "command": "${workspaceRoot}/project/build.bat",
            "showOutput": "silent"
        },
        {
            "isTestCommand": true,
            "taskName": "run",
            "command": "${workspaceRoot}/project/run.bat",
            "showOutput": "never"
        },
        {
            "taskName": "wipe",
            "command": "${workspaceRoot}/project/wipe.bat",
            "showOutput": "never"
        }
    ]
}