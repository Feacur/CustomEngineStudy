{
    "version": "2.0.0",
	"presentation": {
		"reveal": "silent",
		"panel": "shared",
		"showReuseMessage": false,
		"clear": true
	},
    "tasks": [
        {
            "label": "Build Shipping",
            "group": "build",
            "command": "${workspaceFolder}\\..\\..\\project_build.bat",
            "args": [
                "${workspaceFolder}\\main.cpp",
                "${workspaceFolderBasename}",
                "ConsoleApp", "x64",
                "Shipping",
                "-DWIN32_LEAN_AND_MEAN",
                "user32.lib gdi32.lib opengl32.lib", // winmm.lib kernel32.lib
            ],
            "problemMatcher": "$msCompile",
            "type": "shell",
            "options": {
                "cwd": "..\\.."
            },
        },
        {
            "label": "Build Development",
            "group": "build",
            "command": "${workspaceFolder}\\..\\..\\project_build.bat",
            "args": [
                "${workspaceFolder}\\main.cpp",
                "${workspaceFolderBasename}",
                "ConsoleApp", "x64",
                "Development",
                "-DWIN32_LEAN_AND_MEAN",
                "user32.lib gdi32.lib opengl32.lib", // winmm.lib kernel32.lib
            ],
            "problemMatcher": "$msCompile",
            "type": "shell",
            "options": {
                "cwd": "..\\.."
            },
        },
        {
            "label": "Build Debug",
            "group": "build",
            "command": "${workspaceFolder}\\..\\..\\project_build.bat",
            "args": [
                "${workspaceFolder}\\main.cpp",
                "${workspaceFolderBasename}",
